@using MvcKutuphane.Models.Entity
@model List<HAREKET>
@{
    ViewBag.Title = "BookHistory";
    Layout = "~/Views/Shared/Layaout.cshtml";
}

<style>
    #strip {
        width: 100%;
        height: 40px;
        padding: 8px;
        background: #d4d4d4;
        color: black;
        text-align: center;
        font-size: 18px
    }
</style>
<br />
<div id="strip">Üye Kitap Geçmişi</div>
<br />
<h4 style="color:rgb(252,178,22)">Üye Adı : @ViewBag.uye1</h4>
<br />
<table class="table table-active">
    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="background-color: #d4d4d4">
            <td>@item.ID</td>
            <td>@item.KITAP1.AD</td>
            <td>@item.PERSONEL1.PERSONEL1</td>
            <td>@Convert.ToDateTime(item.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(item.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>

