@using MvcKutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model List<HAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layaout.cshtml";
}
<style>
    #strip {
        width: 100%;
        height: 40px;
        padding: 8px;
        background: #d4d4d4;
        color: black;
        text-align: center;
        font-size: 18px
    }
</style>
<br />
<div id="strip">İadesi Alınan Kitap Listesi</div>
<br />


<table class="table table-active">
    <tr style="background-color:rgb(252,178,22)">
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Getirildiği Tarihi</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="background-color: #d4d4d4">
            <td>@item.ID</td>
            <td>@item.KITAP1.AD</td>
            <td>@item.UYELER.AD  @item.UYELER.SOYAD</td>
            <td>@item.PERSONEL1.PERSONEL1</td>
            <td>@Convert.ToDateTime(item.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(item.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>
            <td><a href="/Loaned/LoanReturn/@item.ID" class="btn btn-info">Detaylar</a></td>
        </tr>

    }
</table>




