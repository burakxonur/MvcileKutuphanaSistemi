@using MvcKutuphane.Models.Entity
@model List<YAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layaout.cshtml";
}
<style>
    #strip {
        width: 100%;
        height: 40px;
        padding: 8px;
        background: #d4d4d4;
        color: black;
        text-align: center;
        font-size: 18px
    }
</style>
<br />
<div id="strip">Yazar Listesi</div>
<br />
<table class="table table-active">
    <tr>
        <th>ID</th>
        <th>Yazar Adı</th>
        <th>Yazar Soyadı</th>
        <th>Yazar Detayı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>@item.SOYAD</td>
            <td>@item.DETAY</td>
            <td>@Html.ActionLink("Sil", "DeleteWritter", new { id = item.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz ?')" })</td>
            <td><a href="/Writer/UpdateWriter/@item.ID" class="btn btn-warning">Güncelle</a></td>
        </tr>

    }
</table>

<a href="/Writer/AddWritter/" class="btn btn-success" style="width:100%">Yeni Yazar Ekle</a>

