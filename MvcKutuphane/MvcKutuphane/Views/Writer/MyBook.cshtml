@using MvcKutuphane.Models.Entity
@model List<KITAP>
@{
    ViewBag.Title = "MyBook";
    Layout = "~/Views/Shared/Layaout.cshtml";
}

<style>
    #strip {
        width: 100%;
        height: 40px;
        padding: 8px;
        background: #d4d4d4;
        color: black;
        text-align: center;
        font-size: 18px
    }
</style>
<br />
<div id="strip">Yazarın Kitapları</div>
<br />
<h4 style="color:#ff6a00">Kitap Yazarı :  @ViewBag.yzr</h4>
<br />
<table class="table table-active">
    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kategori</th>
        <th>Yayınevi</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr style="background-color: #d4d4d4">
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>@item.KATEGORI1.AD</td>
            <td>@item.YAYINEVI</td>
        </tr>

    }
</table>


